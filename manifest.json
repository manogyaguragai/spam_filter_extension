{
  "manifest_version": 3,
  "name": "Spam Filter",
  "description": "Analyze emails to detect spam using a backend Python service.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<your-backend-url>/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
